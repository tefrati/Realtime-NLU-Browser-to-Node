<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>GCloud Speech Recognition and DialogFlw Node + Socket.io</title>
    <meta name="description" content="Google Cloud Speech Recognition with Node and Socket.io">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="assets/css/main.css">
</head>

<body>
    <div class="wrapper">
        <h1>Google Cloud Speech and DialogFlow (Node with Socket.io)</h1>

        <audio></audio>

        <br>
        <button id="startRecButton" type="button"> Start recording</button>
        <button id="stopRecButton" type="button"> Stop recording</button>
        <select id="language">
            <option value="en-US" selected>English (US)</option>
            <option value="fr-FR">French</option>
            <option value="es">Spanish</option>
            <option value="he-IL">Hebrew</option>
          </select>
          
        <br>

        <div>
            <p id="ResultText">
                <span class="greyText">No Speech to Text yet<span>
            </p>
            <p>
                <span id="intentName" class="greyText">No intent name yet<span>
            </p>
            <p>
                <span id="intentResponse" class="greyText">No intent response yet<span>
            </p>
        </div>

        <br>
        <br>
    </div>

    <!-- Nlp -->
    <script src="https://unpkg.com/compromise@latest/builds/compromise.min.js"></script>

    <!-- Socket -->
    <script src="assets/js/socket.io.js"></script>

    <!-- Client -->
    <script src="assets/js/client.js"></script>
</body>

</html>